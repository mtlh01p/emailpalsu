{
  "manifest_version": 3,
  "name": "Email Phishing Checker",
  "version": "1.0",
  "permissions": [
      "scripting",
      "activeTab"
  ],
  "host_permissions": [
      "https://*/*"
  ],
  "background": {
     "service_worker": "background.js"
  },
  "content_scripts": [
      {
          "matches": ["https://*/*"],
          "js": ["content.js"]
      }
  ],
  "action": {
      "default_popup": "index.html"
  }
  
}